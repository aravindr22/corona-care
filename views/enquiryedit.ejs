<%- include('partials/header'); -%>
    <div class="container">
        <div>
            <h1 style="text-align: center;color: white;">Edit <%= enquiry.name %> </h1><br />
            <div style="width: 30%; margin: 0 auto;">
                <form action="/corona/enquiry/<%= enquiry._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="enquiry[name]" value="<%= enquiry.name %>" />
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="enquiry[description]"><%= enquiry.description %></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!!!</button>
                        <a href="/corona/enquiry">Go Back!!</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
<%- include('partials/footer'); -%>